---
// Hero section component - Redesigned with asymmetric layout
---

<section class="hero-banner">
  <!-- Decorative background elements -->
  <div class="hero-bg-shapes" aria-hidden="true">
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
    <div class="blob blob-3"></div>
  </div>

  <div class="container">
    <div class="hero-content">
      <div class="hero-left">
        <div class="title-container">
          <div class="site-title">Wampoon</div>
          <div class="site-slogan">Built for devs. Approved by raccoons.</div>
        </div>
        <p class="lead-text">
          A lightweight, portable development environment for running Apache, MariaDB, and PHP locally. No installation required.
        </p>
        <div class="buttons">
          <a href="/getting-started/" class="btn primary-button">
            <span>Get Started</span>
            <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </a>
          <a href="https://github.com/wampoon-box/wampoon-installer/releases/latest/download/wampoon-portable-v1.1.0.zip" class="btn secondary-button">
            <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
            <span>Download</span>
          </a>
        </div>
        <div class="version-badge">
          <span class="badge">v1.1.0</span>
          <span class="badge-text">Latest Release</span>
        </div>
      </div>
      <div class="hero-right">
        <div class="logo-container">
          <img src="/logo.jpg" alt="Wampoon Logo - A friendly raccoon mascot" class="logo-image" />
          <div class="logo-glow"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Floating paw prints -->
  <div class="floating-paws" aria-hidden="true">
    <span class="paw paw-1">üêæ</span>
    <span class="paw paw-2">üêæ</span>
    <span class="paw paw-3">üêæ</span>
  </div>
</section>

<style>
  .hero-banner {
    position: relative;
    overflow: hidden;
    padding: 3rem 0 4rem;
    background: linear-gradient(
      135deg,
      var(--color-background) 0%,
      var(--color-background-secondary) 100%
    );
    display: flex;
    align-items: center;
  }

  /* Background blobs */
  .hero-bg-shapes {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
  }

  .blob-1 {
    width: 500px;
    height: 500px;
    background: var(--color-primary);
    top: -200px;
    left: -100px;
    opacity: 0.15;
    animation: float 15s ease-in-out infinite;
  }

  .blob-2 {
    width: 400px;
    height: 400px;
    background: var(--color-secondary);
    bottom: -150px;
    right: -100px;
    opacity: 0.12;
    animation: float 20s ease-in-out infinite reverse;
  }

  .blob-3 {
    width: 300px;
    height: 300px;
    background: var(--color-accent);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.08;
    animation: float 18s ease-in-out infinite;
  }

  [data-theme="light"] .blob {
    opacity: 0.1;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .hero-left {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .hero-right {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .title-container {
    animation: fadeInLeft 0.8s ease-out;
  }

  .site-title {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 800;
    color: var(--color-text);
    letter-spacing: -3px;
    font-family: var(--font-display);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .site-slogan {
    font-size: clamp(1.2rem, 3vw, 1.6rem);
    color: var(--color-primary);
    font-weight: 700;
    font-family: var(--font-display);
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .lead-text {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    font-weight: 400;
    max-width: 480px;
    animation: fadeInLeft 0.8s ease-out 0.2s both;
  }

  .buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    animation: fadeInLeft 0.8s ease-out 0.4s both;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    font-family: var(--font-display);
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-icon {
    transition: transform 0.3s ease;
  }

  .primary-button {
    background: var(--color-primary);
    color: white !important;
    box-shadow: 0 4px 20px var(--color-glow);
  }

  .primary-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px var(--color-glow);
    background: var(--color-primary-dark);
  }

  .primary-button:hover .btn-icon {
    transform: translateX(4px);
  }

  .secondary-button {
    background: transparent;
    color: var(--color-text) !important;
    border: 2px solid var(--color-border);
  }

  .secondary-button:hover {
    background: var(--color-secondary);
    border-color: var(--color-secondary);
    color: white !important;
    transform: translateY(-3px);
    box-shadow: 0 8px 30px var(--color-glow-secondary);
  }

  .version-badge {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    animation: fadeInLeft 0.8s ease-out 0.6s both;
  }

  .badge {
    background: var(--color-card);
    border: 1px solid var(--color-border);
    padding: 0.4rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    font-family: var(--font-display);
    color: var(--color-primary);
  }

  .badge-text {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  /* Logo section */
  .logo-container {
    position: relative;
    width: 100%;
    max-width: 380px;
    animation: fadeInRight 0.8s ease-out 0.3s both;
  }

  .logo-image {
    width: 100%;
    height: auto;
    border-radius: 24px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4);
    transition: transform 0.4s ease;
    position: relative;
    z-index: 2;
  }

  .logo-container:hover .logo-image {
    transform: scale(1.03) rotate(1deg);
  }

  .logo-glow {
    position: absolute;
    inset: -20px;
    background: radial-gradient(
      circle at center,
      var(--color-glow) 0%,
      transparent 70%
    );
    border-radius: 32px;
    z-index: 1;
    opacity: 0.6;
    animation: pulse-glow 4s ease-in-out infinite;
  }

  /* Floating paw prints */
  .floating-paws {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  .paw {
    position: absolute;
    font-size: 1.5rem;
    opacity: 0.15;
    animation: float 6s ease-in-out infinite;
  }

  .paw-1 {
    top: 15%;
    right: 10%;
    animation-delay: 0s;
  }

  .paw-2 {
    bottom: 20%;
    left: 8%;
    animation-delay: 2s;
  }

  .paw-3 {
    top: 60%;
    right: 25%;
    animation-delay: 4s;
  }

  [data-theme="light"] .paw {
    opacity: 0.1;
  }

  /* Responsive */
  @media screen and (max-width: 996px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .hero-left {
      align-items: center;
    }

    .hero-right {
      order: -1;
    }

    .lead-text {
      max-width: 100%;
    }

    .buttons {
      justify-content: center;
    }

    .version-badge {
      justify-content: center;
    }

    .logo-container {
      max-width: 280px;
    }
  }

  @media screen and (max-width: 768px) {
    .hero-banner {
      padding: 3rem 0 4rem;
      min-height: auto;
    }

    .site-title {
      letter-spacing: -2px;
    }

    .lead-text {
      font-size: 1.1rem;
    }

    .btn {
      padding: 0.75rem 1.5rem;
      font-size: 0.95rem;
    }
  }
</style>
