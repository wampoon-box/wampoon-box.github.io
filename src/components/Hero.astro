---
// Hero section component
---

<section class="hero-banner">
  <div class="container">
    <div class="hero-content">
      <div class="hero-left">
        <div class="title-container">
          <div class="site-title">Wampoon</div>
          <div class="site-slogan">Built for devs. Approved by raccoons.</div>
        </div>
        <p class="lead-text">
          Wampoon is a lightweight, portable development environment for running Apache, MariaDB, and PHP locally.
        </p>
        <div class="buttons">
          <a href="/getting-started/" class="btn primary-button">Get Started</a>
          &nbsp;
          <a href="https://github.com/wampoon-box/wampoon-installer/releases/latest/download/wampoon-portable-v1.1.0.zip" class="btn secondary-button">Download</a>
        </div>
      </div>
      <div class="hero-right">
        <div class="logo-container">
          <img src="/logo.jpg" alt="Wampoon Logo" class="logo-placeholder" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-banner {
    position: relative;
    overflow: hidden;
    padding: 6rem 0;
    background: linear-gradient(
      135deg,
      var(--color-background) 0%,
      var(--color-background-secondary) 100%
    );
  }

  .hero-banner::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
        circle at 20% 50%,
        rgba(58, 143, 208, 0.15) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(88, 168, 94, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 40% 80%,
        rgba(255, 179, 71, 0.08) 0%,
        transparent 50%
      );
    animation: backgroundFloat 20s ease-in-out infinite;
  }

  .hero-banner::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(
        circle 8px at 15% 25%,
        rgba(58, 143, 208, 0.25) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 5px at 16% 27%,
        rgba(58, 143, 208, 0.2) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 5px at 18% 26%,
        rgba(58, 143, 208, 0.2) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 5px at 17% 29%,
        rgba(58, 143, 208, 0.2) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 4px at 17% 31%,
        rgba(58, 143, 208, 0.15) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 8px at 75% 65%,
        rgba(88, 168, 94, 0.22) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 5px at 76% 67%,
        rgba(88, 168, 94, 0.18) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 5px at 78% 66%,
        rgba(88, 168, 94, 0.18) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 5px at 77% 69%,
        rgba(88, 168, 94, 0.18) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 4px at 77% 71%,
        rgba(88, 168, 94, 0.15) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 8px at 35% 85%,
        rgba(255, 179, 71, 0.2) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 5px at 36% 87%,
        rgba(255, 179, 71, 0.16) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 5px at 38% 86%,
        rgba(255, 179, 71, 0.16) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 5px at 37% 89%,
        rgba(255, 179, 71, 0.16) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle 4px at 37% 91%,
        rgba(255, 179, 71, 0.12) 0%,
        transparent 50%
      );
    pointer-events: none;
    z-index: 1;
  }

  [data-theme="light"] .hero-banner::before {
    background: radial-gradient(
        circle at 20% 50%,
        rgba(58, 143, 208, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(88, 168, 94, 0.08) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 40% 80%,
        rgba(255, 179, 71, 0.06) 0%,
        transparent 50%
      );
  }

  [data-theme="light"] .hero-banner::after {
    opacity: 0.8;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 2;
    margin: 2rem 0;
  }

  .hero-left {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .hero-right {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .title-container {
    margin-bottom: 1rem;
  }

  .site-title {
    font-size: 4rem;
    font-weight: 800;
    color: var(--color-text);
    margin-bottom: 0.5rem;
    letter-spacing: -2px;
    font-family: "Nunito Sans", sans-serif;
    line-height: 1.1;
    text-shadow: 0 4px 12px rgba(58, 143, 208, 0.4);
    animation: fadeInUp 1s ease-out;
  }

  [data-theme="light"] .site-title {
    text-shadow: 0 2px 8px rgba(58, 143, 208, 0.2);
  }

  .site-slogan {
    font-size: 1.8rem;
    color: var(--color-primary);
    font-weight: 700;
    letter-spacing: 0.02em;
    margin-bottom: 0;
    text-shadow: 0 2px 8px rgba(58, 143, 208, 0.3);
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
  }

  /* .site-slogan::after {
    content: "üêæ";
    position: absolute;
    right: -2.5rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.7rem;
    -webkit-text-fill-color: initial;
  } */

  [data-theme="light"] .site-slogan {
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 1px 4px rgba(58, 143, 208, 0.2);
  }

  .lead-text {
    font-size: 1.3rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    font-weight: 400;
    margin: 0;
    max-width: 500px;
  }

  .buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .logo-container {
    max-width: 400px;
    width: 100%;
    position: relative;
  }

  .logo-placeholder {
    width: 100%;
    height: 370px;
    background: linear-gradient(
      135deg,
      var(--color-card),
      var(--color-background-secondary)
    );
    border: 2px solid var(--color-border);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text);
    font-size: 2.5rem;
    font-weight: 800;
    letter-spacing: -1px;
    box-shadow: 0 20px 40px rgba(58, 143, 208, 0.2);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .logo-placeholder::before {
    content: "ü¶ù";
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 2rem;
    opacity: 0.6;
  }

  .logo-placeholder:hover {
    transform: scale(1.05);
    box-shadow: 0 25px 50px rgba(58, 143, 208, 0.3);
    border-color: var(--color-primary);
  }

  .logo-container::after {
    content: "üêæ";
    position: absolute;
    bottom: 15px;
    left: 15px;
    font-size: 2rem;
    opacity: 0.6;
    color: var(--color-primary);
    z-index: 1000;
    pointer-events: none;
  }

  @media screen and (max-width: 996px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .hero-left {
      order: 1;
      align-items: center;
    }

    .hero-right {
      order: 2;
    }

    .site-title {
      font-size: 3rem;
    }

    .buttons {
      justify-content: center;
    }

    .logo-placeholder {
      height: 250px;
      font-size: 2rem;
    }
  }

  @media screen and (max-width: 768px) {
    .site-title {
      font-size: 2.5rem;
    }

    .site-slogan {
      font-size: 1.2rem;
    }

    .lead-text {
      font-size: 1.1rem;
    }

    .logo-container {
      max-width: 300px;
    }

    .hero-banner {
      padding: 2rem 0;
    }

    .logo-placeholder {
      height: 200px;
      font-size: 1.5rem;
    }
  }
</style>
